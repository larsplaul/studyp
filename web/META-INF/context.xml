<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/StudyPointSystem">
  <Resource description="Data" 
            driverClassName="com.mysql.jdbc.Driver" 
            maxActive="10" maxIdle="3" 
            maxWait="10000" 
            name="jdbc/studypoint"
            password="test" 
            type="javax.sql.DataSource" 
            url="jdbc:mysql://localhost:3306/studypoint?zeroDateTimeBehavior=convertToNull" 
            username="root"/>
  
  <!--<Resource auth="Container" driverClassName="com.mysql.jdbc.Driver" maxActive="20" maxIdle="10" maxWait="-1" name="jdbc/demo" password="test" type="javax.sql.DataSource" url="jdbc:mysql://localhost:3306/studypoint?zeroDateTimeBehavior=convertToNull" username="root"/>-->
  <ResourceLink global="jdbc/studypoint" name="jdbc/studypoint" type="javax.sql.DataSource"/>
  
   <Realm className="org.apache.catalina.realm.DataSourceRealm"
           userTable="studypointuser" 
          userNameCol="USERNAME" 
          userCredCol="PASSWORD"
          userRoleTable="studypointusers_roles" 
          roleNameCol="roleName"
           localDataSource="true"
           dataSourceName="jdbc/studypoint"/>
   
  
</Context>
